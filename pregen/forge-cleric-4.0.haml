- name = "Saeran Loredan"
- levels = { cleric: 4 }
- hd = { cleric: 'd8' }
- ability_scores = {str: 16, dex: 8, con: 14, int: 10, wis: 18, cha: 10}
- mods = Hash[ability_scores.map { |k, v| [k, (v - 10) / 2] }]
- prof = ((levels.values.sum - 1) / 4 + 2)
- hp = 8 + (levels[:cleric] - 1) * 5 + mods[:con] * levels[:cleric]
!!!
%head
